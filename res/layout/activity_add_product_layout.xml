<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
<RelativeLayout
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
 
<RelativeLayout android:id="@+id/topLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/product_not_found_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:text="@string/product_not_found_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
</RelativeLayout>

<Button
    android:id="@+id/add_product_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="false"
    android:layout_below="@id/topLayout"
    android:layout_centerInParent="true"
    android:layout_marginTop="15dp"
    android:drawableLeft="@drawable/plus"
    android:text="@string/add_product_button_text" />

<RelativeLayout
    android:id="@+id/formLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/add_product_button"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="15dp"
    android:paddingTop="10dp" >

</RelativeLayout>

</RelativeLayout>

<RelativeLayout
    android:id="@+id/fragment_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
</RelativeLayout>

</FrameLayout>

</ScrollView>