<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

        <!-- Line divider to be inserted in layouts -->
    <style name="Divider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>

    <item name="android:background">?android:attr/listDivider</item>
	</style>
	
            <!-- Vertical divider to be inserted in layouts -->
    <style name="vertical_divider">
    <item name="android:layout_width">5dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">?android:attr/listDivider</item>
	</style>
	
    <style name="wizard_button">
    <item name="android:background">@drawable/wizard_button</item>
    <item name="android:shadowColor">@android:color/black</item>
    <item name="android:shadowDx">50</item>
    <item name="android:shadowDy">50</item>
    <item name="android:textColor">@android:color/white</item>
	</style>
	
    <style name="standard_button">
    <item name="android:background">@drawable/standard_button</item>
    <item name="android:shadowColor">@android:color/black</item>
    <item name="android:shadowDx">50</item>
    <item name="android:shadowDy">50</item>
    <item name="android:textColor">@android:color/white</item>
	</style>
	
    <style name="text_header">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
